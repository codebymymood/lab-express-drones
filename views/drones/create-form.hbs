<form method = 'POST' action = '/drones/create'>
    
    <h2>Create a new drone</h2>

  <div class="mb-3">
    <label class="form-label" >Drone Name</label>
    <input class="form-control" type="text" name="name">
    <br>
    <label class="form-label" >Number of Propellers</label>
    <input class="form-control" type="number" name="propellers">
    <br>
    <label class="form-label" >Maximum Speed Value</label>
    <input class="form-control" type="number" name="maxSpeed">
    <br>
    <button class="btn btn-primary" type="submit">CREATE</button>
  </div>
</form>